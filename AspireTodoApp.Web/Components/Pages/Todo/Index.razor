@page "/todo"
@using AspireTodoApp.Web.ApiClients
@using AspireTodoApp.Web.Models
@attribute [StreamRendering(true)]

@inject TodoApiClient TodoApi

<h1>Todo</h1>

@if (todoItems == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>IsComplete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todoItem in todoItems)
            {
                <tr>
                    <td>@todoItem.Id</td>
                    <td>@todoItem.Name</td>
                    <td>@todoItem.IsComplete</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private TodoItem[]? todoItems;

    protected override async Task OnInitializedAsync()
    {
        todoItems = await TodoApi.GetTodoItemsAsync();
    }

}
